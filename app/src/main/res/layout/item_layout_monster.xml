<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:gravity="center">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMonster"
            android:layout_width="@dimen/monster_size"
            android:layout_height="@dimen/monster_size"
            android:scaleType="centerCrop"
            android:src="@drawable/wukong"
            android:layout_centerHorizontal="true"
            android:background="@drawable/legendary_frame"
            android:padding="4dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMonsterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cihan Kaptan"
            android:minLines="2"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_below="@id/ivMonster"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>