<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/colorBlack"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_weight=".5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivMonsterFirst"
                android:layout_width="@dimen/monster_size"
                android:layout_height="@dimen/monster_size"
                android:scaleType="centerCrop"
                android:src="@drawable/splash_logo"
                android:transitionName="imageMain"
                android:layout_marginRight="20dp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/legendary_frame"
                android:padding="4dp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMonsterNameFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kabu"
                android:textColor="@color/colorLegendaryFrame"
                android:minLines="2"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_below="@id/ivMonsterFirst"
                android:layout_centerHorizontal="true"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvLevelsFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvMonsterNameFirst"
                android:layout_centerHorizontal="true"
                >

        </androidx.recyclerview.widget.RecyclerView>

        <Spinner
                android:id="@+id/spnMonsterFirst"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/lightGrayTableItemBg"
                android:layout_toRightOf="@id/ivMonsterFirst"
                android:layout_centerVertical="true"
                android:gravity="right|center_vertical">

        </Spinner>

    </RelativeLayout>


    <RelativeLayout
            android:layout_weight=".5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/legendary_frame"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivMonsterSecond"
                android:layout_width="@dimen/monster_size"
                android:layout_height="@dimen/monster_size"
                android:scaleType="centerCrop"
                android:src="@drawable/splash_logo"
                android:transitionName="imageMain"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/legendary_frame"
                android:padding="4dp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMonsterNameSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kabu"
                android:textColor="@color/colorLegendaryFrame"
                android:minLines="2"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_below="@id/ivMonsterSecond"
                android:layout_centerHorizontal="true"/>



        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvLevelsSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvMonsterNameSecond"
                android:layout_centerHorizontal="true">

        </androidx.recyclerview.widget.RecyclerView>


        <Spinner
                android:id="@+id/spnMonsterSecond"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/lightGrayTableItemBg"
                android:layout_toRightOf="@id/ivMonsterSecond"
                android:layout_centerVertical="true"
                android:gravity="right|center_vertical">

        </Spinner>


    </RelativeLayout>


</LinearLayout>