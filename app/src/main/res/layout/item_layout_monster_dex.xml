<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivMonsterDex"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/wukong"
                    android:background="@drawable/legendary_frame"
                    android:layout_marginRight="16dp"
                    android:padding="4dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMonsterName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cihan Kaptan"
                    android:layout_toRightOf="@+id/ivMonsterDex"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_alignParentTop="true"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivMonsterHealth"
                    android:layout_width="25dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_attr_hp"
                    android:layout_below="@+id/tvMonsterName"
                    android:layout_toRightOf="@+id/ivMonsterDex"
                    android:textColor="@color/colorPrimaryDark"/>
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMonsterHealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health"
                    android:layout_below="@+id/tvMonsterName"
                    android:layout_toRightOf="@+id/ivMonsterHealth"
                    android:textColor="@color/colorPrimaryDark"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivMonsterDamage"
                    android:layout_width="25dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_attr_dmg"
                    android:layout_below="@+id/tvMonsterName"
                    android:layout_toRightOf="@+id/tvMonsterHealth"
                    android:textColor="@color/colorPrimaryDark"/>
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMonsterDamage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Damage"
                    android:layout_below="@+id/tvMonsterName"
                    android:layout_toRightOf="@+id/ivMonsterDamage"
                    android:textColor="@color/colorPrimaryDark"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivMonsterSpeed"
                    android:layout_width="25dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_attr_speed"
                    android:layout_below="@+id/tvMonsterName"
                    android:layout_toRightOf="@+id/tvMonsterDamage"
                    android:textColor="@color/colorPrimaryDark"/>
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMonsterSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed"
                    android:layout_below="@+id/tvMonsterName"
                    android:layout_toRightOf="@+id/ivMonsterSpeed"
                    android:textColor="@color/colorPrimaryDark"/>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>