<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBlack"
        tools:context=".ui.MonsterListActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

        <RadioGroup
                android:id="@+id/radioButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rbHealth"
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/lightGrayTableItemBg"
                    android:drawableStart="@drawable/icon_attr_hp" />

            <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rbDamage"
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/lightGrayTableItemBg"
                    android:drawableStart="@drawable/icon_attr_dmg" />

            <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rbSpeed"
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/lightGrayTableItemBg"
                    android:drawableStart="@drawable/icon_attr_speed"
                    android:gravity="center" />


        </RadioGroup>

        <com.tiper.MaterialSpinner
                android:id="@+id/spn_monster_dex"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_selector_drawable"
                android:textColorHint="@color/lightGrayTableItemBg"
                android:textColor="@color/lightGrayTableItemBg"
                app:spinnerMode="bottomsheet"
                android:hint="Select Level" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMonsterDexList"
            android:padding="10dp"
            android:background="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

</LinearLayout>